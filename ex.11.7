     {     cout << "family: " << i.first << " has " << i.second.size()
               << ((i.second.size() > 1) ? " kids" : " kid") << ":\n\t\t ";
          
          for (auto &l: i.second)
               cout << l << " " ;

          cout << endl;
     }
               
}

